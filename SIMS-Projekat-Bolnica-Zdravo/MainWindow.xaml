        <Button Content="Lekar" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="3" Height="65" Width="100" Margin="61,38,0,0"
                Name="Lekar" Click="Lekar_Click"></Button>
    </Grid>
</Window>
