<Page x:Class="SIMS_Projekat_Bolnica_Zdravo.PatientWindows.NotificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS_Projekat_Bolnica_Zdravo.PatientWindows"
      mc:Ignorable="d" 
      d:DesignHeight="530" d:DesignWidth="430"
      Title="NotificationPage">

    <Grid Background="White">
        <DataGrid ItemsSource="{Binding}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Notifikacija" Width="auto" FontSize="15" Binding="{Binding Content}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
