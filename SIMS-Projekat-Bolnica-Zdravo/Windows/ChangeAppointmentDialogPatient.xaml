<Window x:Class="SIMS_Projekat_Bolnica_Zdravo.Windows.ChangeAppointmentDialogPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS_Projekat_Bolnica_Zdravo.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Patient" Height="755" Width="430">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions >
            <RowDefinition Height="80"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="390"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Row="0" Grid.ColumnSpan="3" Fill="Silver" />
        <Rectangle Grid.Row="4" Grid.ColumnSpan="3" Fill="Silver" />
        <Button Content="Beleške" FontSize="20" HorizontalAlignment="Right" Margin="10,9.6,10,11" Grid.Row="4" VerticalAlignment="Top" Width="122" Height="111" Click="Show_Notes"/>
        <Button Content="Glavni prozor" FontSize="20" HorizontalAlignment="Center" Margin="10,9.6,10,0" Grid.Row="4" VerticalAlignment="Top" Width="122" Height="111" Grid.Column="1" Click="Show_Home"/>
        <Button Content="Button" FontSize="20" HorizontalAlignment="Left" Margin="10,9.6,10,0" Grid.Row="4" VerticalAlignment="Top" Width="122" Height="111" Grid.Column="2"/>
        <TextBlock HorizontalAlignment="Left" FontSize="25" TextAlignment="Right" Margin="0,59,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Datum:" VerticalAlignment="Top" Height="59" Width="101"/>
        <TextBlock HorizontalAlignment="Left" FontSize="25" TextAlignment="Right" Margin="0,118,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Vreme:" VerticalAlignment="Top" Height="39" Width="101"/>

        <TextBox x:Name="Hours" IsEnabled="False" TextAlignment="Center" Text="{Binding Path=hour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" HorizontalAlignment="Left" FontSize="25" Height="39" Margin="9.4,118,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="50"/>
        <TextBlock FontSize="25" HorizontalAlignment="Left" Margin="71,170,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Sati:" VerticalAlignment="Top" Height="39" Width="50"/>
        <Slider Grid.Column="1" Value="{Binding Path=hour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="sliderHours_ValueChanged" x:Name="sliderHours" TickFrequency="1" Minimum="7" Maximum="21" IsSnapToTickEnabled="True" Grid.ColumnSpan="2" Width="250" HorizontalAlignment="Center" Margin="16.4,179,16.8,0" Grid.Row="2" VerticalAlignment="Top"/>

        <TextBox x:Name="Minutes" IsEnabled="False" TextAlignment="Center" Text="{Binding Path=minute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" HorizontalAlignment="Left" FontSize="25" Height="39" Margin="81.4,118,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.516,0.475"/>
        <TextBlock FontSize="25" HorizontalAlignment="Left" Margin="71,209,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Min:" VerticalAlignment="Top" Height="39" Width="50" RenderTransformOrigin="-0.772,0.815"/>
        <Slider Grid.Column="1" Value="{Binding Path=minute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="sliderMinutes_ValueChanged" x:Name="sliderMinutes" TickFrequency="30" Minimum="0" Maximum="30" IsSnapToTickEnabled="True" Grid.ColumnSpan="2" Width="250" HorizontalAlignment="Center" Margin="16.4,219,16.8,0" Grid.Row="2" VerticalAlignment="Top"/>
        
        <TextBlock FontSize="25" TextAlignment="Center" HorizontalAlignment="Left" Margin="64.4,118,0,0" Grid.Row="2" TextWrapping="Wrap" Text=":" VerticalAlignment="Top" Height="40" Width="12" Grid.Column="1"/>

        <TextBox x:Name="Date" IsEnabled="False"  TextAlignment="Center" Text="{Binding date, Mode=OneWay,  StringFormat='yyyy/MM/dd'}" Grid.Column="1" HorizontalAlignment="Left" FontSize="25" Height="39" Margin="9.4,59,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Grid.ColumnSpan="2"/>
        <Button Content="Izmeni Datum" FontSize="15" Grid.Column="2" HorizontalAlignment="Left" Margin="28.8,59,0,0" Grid.Row="2" VerticalAlignment="Top" Width="103" Height="39" Click="Change_Date"/>

        <Button Grid.Row="3" Margin="10,10,10,10" Content="Poništi" Click="Cancel_Change_Appointment"/>
        <Button Grid.Row="3" Grid.Column="2" Margin="10,10,10,10" Content="Izmeni termin" Click="Confirm_Change_appointment"/>
    </Grid>
</Window>
